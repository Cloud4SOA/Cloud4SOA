<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>

        <g:HorizontalPanel>


            <g:FlowPanel>
                <g:Label text="Paas Offer name:"/>
                <g:TextBox ui:field="title" readOnly="true"/>

                <g:Label text="PaaS Provider:"/>
                <g:TextBox ui:field="paasProvider" readOnly="true"/>

                <g:Label text="Infrastructure:"/>
                <g:TextBox ui:field="userInfrastructure" readOnly="true"/>


            </g:FlowPanel>

            <g:FlowPanel>

                <g:Label text="Programming language:"/>
                <g:TextBox ui:field="programmingLanguage" readOnly="true"/>

                <g:Label text="Pricing policies:"/>
                <g:ListBox ui:field="pricingPolicyList" multipleSelect="true"/>


                <g:HorizontalPanel>
                    <g:Button text="Deploy application" ui:field="deploy"/>
                </g:HorizontalPanel>

            </g:FlowPanel>



        </g:HorizontalPanel>



    </g:HTMLPanel>
</ui:UiBinder>