<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:button="urn:import:com.extjs.gxt.ui.client.widget.button"
             xmlns:form="urn:import:com.extjs.gxt.ui.client.widget.form"
             xmlns:gxt="urn:import:com.extjs.gxt.ui.client.widget"
             xmlns:toolbar="urn:import:com.extjs.gxt.ui.client.widget.toolbar" xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <gxt:LayoutContainer addStyleNames="c4s-white-bg" layout="FitLayout">

        <gxt:ContentPanel ui:field="editorPanel" headerVisible="true" borders="true" heading="Application profile" scrollMode="AUTO">
            <gxt:topcomponent>
                <toolbar:ToolBar ui:field="toolbar" addStyleNames="c4s-white-bg">
                    <button:Button ui:field="cancelButton" text="Back" scale="LARGE" iconAlign="BOTTOM"/>
                    <button:Button ui:field="editButton" text="Edit" scale="LARGE" iconAlign="BOTTOM"/>
                    <button:Button ui:field="deployButton" text="Deploy" scale="LARGE" iconAlign="BOTTOM"/>
                    <toolbar:FillToolItem/>
                    <button:Button ui:field="deleteButton" text="Delete" scale="LARGE" iconAlign="BOTTOM"/>
                </toolbar:ToolBar>
            </gxt:topcomponent>

            <form:FormPanel ui:field="applicationProfileForm" headerVisible="false">
            </form:FormPanel>


        </gxt:ContentPanel>
    </gxt:LayoutContainer>
</ui:UiBinder>