<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:button="urn:import:com.extjs.gxt.ui.client.widget.button"
             xmlns:form="urn:import:com.extjs.gxt.ui.client.widget.form"
             xmlns:gxt="urn:import:com.extjs.gxt.ui.client.widget"
        >


    <gxt:LayoutContainer layout="FlowLayout">
        <gxt:layoutdata type="FlowData" margins="0">
                <form:FormPanel bodyBorder="true" heading="PaaS Offer" headerVisible="false" height="300">

                    <form:layoutdata type="FormData">
                        <form:TextField ui:field="offerName" fieldLabel="PaaS Offer name" allowBlank="true" readOnly="true"/>
                        <form:TextField ui:field="provider" fieldLabel="PaaS Provider" allowBlank="true" readOnly="true"/>
                        <form:TextField ui:field="infrastructure" fieldLabel="Infrastructure" allowBlank="true" readOnly="true"/>
                        <form:TextField ui:field="programmingLanguage" fieldLabel="Programming language"
                                        allowBlank="true" readOnly="true"/>
                    </form:layoutdata>

                    <form:buttons>
                        <button:Button ui:field="deployButton" text="Deploy application"/>
                    </form:buttons>

                </form:FormPanel>
        </gxt:layoutdata>
    </gxt:LayoutContainer>

</ui:UiBinder>