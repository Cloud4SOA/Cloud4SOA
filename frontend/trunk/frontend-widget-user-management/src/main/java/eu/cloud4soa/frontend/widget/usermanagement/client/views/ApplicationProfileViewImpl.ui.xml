                <g:ListBox multipleSelect="true" ui:field="hardwareRequirementList" width="180px"/>

                <g:Label text="Software requirements:"/>
                <g:ListBox multipleSelect="true" ui:field="softwareRequirementList" width="180px"/>
    -->
                <g:Label text="Programming language:"/>
                <g:ListBox ui:field="programmingLanguageList" width="180px"/>

                <g:HorizontalPanel>
                    <g:Button text="Restore" ui:field="restoreButton"/>
                    <g:Button text="Delete" ui:field="deleteButton"/>
                    <g:Button text="Save" ui:field="saveButton"/>
                </g:HorizontalPanel>

            </g:FlowPanel>

        </g:HorizontalPanel>


    </g:HTMLPanel>
</ui:UiBinder>