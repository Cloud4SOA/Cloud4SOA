<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>

        <g:HorizontalPanel spacing="10" width="100%">
            <g:VerticalPanel width="50%">

                <g:Label text="My profiles"/>

                <g:ListBox ui:field="applicationInstanceList" width="180px"/>

                <g:HorizontalPanel>
                    <g:Button text="New" ui:field="newProfileButton"/>
                    <g:Button text="Search" ui:field="searchButton"/>
                </g:HorizontalPanel>

            </g:VerticalPanel>

            <g:FlowPanel>

                <g:Label text="Code:"/>
                <g:TextBox ui:field="acronymTextBox"/>

                <g:Label text="Description:"/>
                <g:TextBox ui:field="descriptionTextBox"/>
                <!--

                <g:Label text="Application archetype:"/>
                <g:ListBox ui:field="archetypeList" width="180px"/>
