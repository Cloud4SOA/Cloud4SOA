<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:HorizontalPanel>


            <g:FlowPanel>
                <g:Label text="Profile of user"/>
                <g:TextBox ui:field="username" readOnly="true"/>
            </g:FlowPanel>

            <g:FlowPanel>

                <g:Label text="Name:"/>
                <g:TextBox ui:field="name"/>

                <g:Label text="Surname:"/>
                <g:TextBox ui:field="surname"/>

                <g:Label text="e-mail:"/>
                <g:TextBox ui:field="email"/>

                <g:Label text="Birth date:"/>
                <dp:DateBox ui:field="birthDate" />


                <g:HorizontalPanel>
                    <g:Button text="Save" ui:field="saveButton"/>
                </g:HorizontalPanel>

            </g:FlowPanel>

        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>