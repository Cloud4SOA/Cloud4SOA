<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:button="urn:import:com.extjs.gxt.ui.client.widget.button"
             xmlns:form="urn:import:com.extjs.gxt.ui.client.widget.form"

             xmlns:gxt="urn:import:com.extjs.gxt.ui.client.widget"
        >
    <gxt:LayoutContainer layout="CenterLayout">
        <form:FormPanel frame="true" heading="User profile" width="400" height="300">

            <form:layoutdata type="FormData">

                <form:TextField ui:field="username" fieldLabel="Username" readOnly="true"/>
                <form:TextField ui:field="name" fieldLabel="First name"/>
                <form:TextField ui:field="surname" fieldLabel="Surname"/>
                <form:TextField ui:field="geekcode" fieldLabel="Geek code"/>
                <form:TextField ui:field="email" fieldLabel="Email"/>
                <form:DateField ui:field="birthday" fieldLabel="Birthday"/>

            </form:layoutdata>

            <form:buttons>
                <button:Button ui:field="saveButton" text="Save"/>
            </form:buttons>
            
            <form:formButtonBinding buttonField="saveButton"/>


        </form:FormPanel>
    </gxt:LayoutContainer>
</ui:UiBinder>