<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit 2.0//EN" "http://google-web-toolkit.googlecode.com/svn/releases/2.0/distro-source/core/src/gwt-module.dtd">
<module rename-to="loginwidget">

    <inherits name='com.google.gwt.user.User'/>
    <inherits name="com.google.gwt.place.Place"/>
    <inherits name="com.google.gwt.activity.Activity"/>
    <inherits name="eu.cloud4soa.frontend.commons.FrontendCommons"/>

    <inherits name="com.extjs.gxt.ui.GXT" />
    <inherits name="com.jhickman.web.gwt.gxtuibinder.GxtUiBinder" />

    <source path="client" />
    <source path="shared" />


    <replace-with class="eu.cloud4soa.frontend.widget.login.client.LoginViewGxtImpl">
        <when-type-is class="eu.cloud4soa.frontend.widget.login.client.LoginView"/>
    </replace-with>

    <replace-with class="eu.cloud4soa.frontend.widget.login.client.LostPasswordViewGxtImpl">
        <when-type-is class="eu.cloud4soa.frontend.widget.login.client.LostPasswordView"/>
    </replace-with>

    <replace-with class="eu.cloud4soa.frontend.widget.login.client.RegisterViewGxtImpl">
        <when-type-is class="eu.cloud4soa.frontend.widget.login.client.RegisterView"/>
    </replace-with>
    
    <replace-with class="eu.cloud4soa.frontend.widget.login.client.RegistrationViewGxtImpl">
        <when-type-is class="eu.cloud4soa.frontend.widget.login.client.RegistrationView"/>
    </replace-with>

    <replace-with class="eu.cloud4soa.frontend.commons.client.Cloud4SOAUIClientFactoryImpl">
        <when-type-is class="eu.cloud4soa.frontend.commons.client.Cloud4SOAUIClientFactory"/>
    </replace-with>

    <replace-with class="eu.cloud4soa.frontend.widget.login.client.UserProfileViewGxtImpl">
        <when-type-is class="eu.cloud4soa.frontend.widget.login.client.UserProfileView"/>
    </replace-with>


</module>